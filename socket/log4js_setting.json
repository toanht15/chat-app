{
    "appenders": {
        "request": {
            "type": "dateFile",
          "filename": "./logs/request",
            "pattern": "yyyyMMdd.log",
            "daysToKeep": 7,
            "alwaysIncludePattern": "true"
        },
        "error": {
            "type": "dateFile",
          "filename": "./logs/error",
            "pattern": "yyyyMMdd.log",
            "daysToKeep": 7,
            "alwaysIncludePattern": "true"
        },
        "debug": {
            "type": "dateFile",
          "filename": "./logs/debug",
            "pattern": "yyyyMMdd.log",
            "daysToKeep": 7,
            "alwaysIncludePattern": "false"
        },
        "system": {
            "type": "file",
            "filename": "./logs/system.log",
            "maxLogSize": 10240000,
            "backups": 3
        },
        "lbc": {
            "type": "file",
            "filename": "./logs/lbcLog.log",
            "maxLogSize": 10240000,
            "backups": 3
        },
        "cogmo": {
            "type": "file",
            "filename": "./logs/cogmoApiLog.log",
            "maxLogSize": 10240000,
            "backups": 3
        },
        "traceScenario": {
            "type": "file",
            "filename": "./logs/traceScenario.log",
            "maxLogSize": 10240000,
            "backups": 3
        }
    },
    "categories": {
        "default": {"appenders":["debug"], "level": "error"},
        "request": {"appenders":["request"], "level": "info"},
        "error": {"appenders":["error"], "level": "info"},
        "debug": {"appenders":["debug"], "level": "info"},
        "system": {"appenders":["system"], "level":"info"},
        "lbc": {"appenders":["lbc"], "level":"debug"},
        "cogmo": {"appenders":["cogmo"], "level":"debug"},
        "traceScenario": {"appenders":["traceScenario"], "level":"debug"}
    }
}
